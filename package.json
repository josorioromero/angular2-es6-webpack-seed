{
  "name": "angular2-es6-webpack-seed",
  "version": "0.0.1",
  "description": "Seed project for angular2 apps using ES6 and Webpack",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/daverivera/angular2-es6-wenpack-seed.git"
  },
  "engines": {
    "node": "~7.3.0"
  },
  "scripts": {
    "build": "yarn run clean && webpack --progress -p",
    "ci": "yarn run lint && yarn run coverage",
    "clean": "rimraf build",
    "coverage": "nyc --reporter=lcov --reporter=text yarn test",
    "lint": "eslint app",
    "server": "yarn run server:dev",
    "server:prod": "webpack && http-server build -c-1 --cors -p 9000 -o",
    "server:dev": "webpack-dev-server --host 0.0.0.0 --config webpack.dev.babel.js",
    "start": "yarn run server:dev",
    "test": "mocha-webpack --require mocha-test-shim.js --webpack-config webpack.test.babel.js \"app/**/*.spec.js\"",
    "test:watch": "mocha-webpack --watch --require mocha-test-shim.js --webpack-config webpack.test.babel.js \"app/**/*.spec.js\"",
    "watch": "yarn run server:dev -- --watch",
    "watch:prod": "yarn run server:prod -- --watch"
  },
  "author": "Dave Rivera <daverivera90@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@angular/common": "~2.4.0",
    "@angular/compiler": "~2.4.0",
    "@angular/core": "~2.4.0",
    "@angular/forms": "~2.4.0",
    "@angular/http": "~2.4.0",
    "@angular/platform-browser": "~2.4.1",
    "@angular/platform-browser-dynamic": "~2.4.0",
    "@angular/platform-server": "~2.4.0",
    "@angular/router": "~3.4.0",
    "@angular/upgrade": "~2.4.0",
    "angular-in-memory-web-api": "~0.2.0",
    "core-js": "~2.4.0",
    "reflect-metadata": "~0.1.0",
    "rxjs": "~5.0.0",
    "zone.js": "~0.7.0"
  },
  "devDependencies": {
    "@angular/compiler": "~2.4.0",
    "babel-core": "~6.21.0",
    "babel-loader": "~6.2.0",
    "babel-plugin-istanbul": "~3.0.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-angular2": "^0.0.2",
    "babel-preset-es2015": "^6.22.0",
    "babel-register": "~6.18.0",
    "chai": "~3.5.0",
    "copy-webpack-plugin": "~4.0.0",
    "eslint": "~3.12.0",
    "eslint-config-airbnb": "~13.0.0",
    "eslint-plugin-import": "~2.2.0",
    "expect.js": "^0.3.1",
    "growl": "^1.9.2",
    "html-loader": "~0.4.0",
    "html-webpack-plugin": "~2.25.0",
    "http-server": "~0.9.0",
    "jsdom": "^9.11.0",
    "json-loader": "~0.5.0",
    "mocha": "~3.2.0",
    "mocha-webpack": "~0.7.0",
    "nyc": "~10.0.0",
    "rimraf": "~2.5.0",
    "sinon": "~1.17.0",
    "standard": "~8.6.0",
    "webpack": "~1.14.0",
    "webpack-dev-server": "~1.16.0",
    "webpack-hot-middleware": "~2.14.0",
    "webpack-merge": "^2.4.0",
    "webpack-node-externals": "~1.5.4"
  }
}
